{
    "name": "PostgreSQL Server",
    "version": "1.0.0",
    "slug": "postgresql_server",
    "description": "PostgreSQL сервер как аддон для Home Assistant",
    "startup": "services",
    "boot": "auto",
    "arch": ["amd64", "aarch64", "armv7"],
    "options": {
      "pgdata": "/data/postgresql",
      "database": "ha_db",
      "username": "ha_user",
      "password": "secure_password"
    },
    "schema": {
      "pgdata": "str",
      "database": "str",
      "username": "str",
      "password": "str"
    },
    "map": ["data:rw"],
    "ports": {
      "5432/tcp": 5432
    },
    "environment": {
      "PGDATA": "/data/postgresql"
    }
  }
  